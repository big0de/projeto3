<%= form_for ad do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :prince %>
    <%= form.number_field :prince, :class => "form-control" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
