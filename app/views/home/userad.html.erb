<h1>Anúncios</h1>


<div>
  <ul>
    <% @ads.each do |ad| %>
      <li>
        <p><strong><%= ad.title %></strong></p>
        <p> Descrição: <%= ad.description %></p>
        <p> Preço: <%= ad.prince %></p>
        <p> Anunciante: <%= ad.user.name %></p>
        <p><%= link_to "Editar", edit_ad_path(ad) %></p>
      </li>
    <% end %>
  </ul>
</div>
