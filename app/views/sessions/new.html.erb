<h1>Entrar</h1>

<%= form_for @user,  url: sessions_path do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, :class => "form-control" %>
  </div>

  <div>
    <%= form.submit t("helpers.submit.login") %>
  </div>
<% end %>
